{
    "type": "object",
    "properties": {
        "logger": {
            "type": "object",
            "default": {},
            "env": "TEMPLATE_LOGGER",
            "properties": {
                "name": {
                    "type": "string",
                    "default": "",
                    "env": "TEMPLATE_LOGGER_NAME",
                    "minLength": 0,
                    "maxLength": 32
                },
                "enable": {
                    "type": "boolean",
                    "default": true,
                    "env": "TEMPLATE_LOGGER_ENABLE"
                },
                "level": {
                    "type": "string",
                    "default": "error",
                    "env": "TEMPLATE_LOGGER_LEVEL",
                    "enum": ["fatal","info","error","warn","debug","trace"]
                },
                "timestamp": {
                    "type": "string",
                    "default": "none",
                    "env": "TEMPLATE_LOGGER_TIMESTAMP",
                    "enum": ["full","short","unix","none"]
                }
            },
            "additionalProperties": false,
            "required": [
                "name",
                "enable",
                "level",
                "timestamp"
            ]
        },
        "api": {
            "type": "object",
            "default": {},
            "env": "TEMPLATE_API",
            "properties": {
                "enable": {
                    "type": "boolean",
                    "default": false,
                    "env": "TEMPLATE_API_ENABLE"
                },
                "logging": {
                    "type": "boolean",
                    "default": false,
                    "env": "TEMPLATE_API_LOGGING"
                },
                "hostname": {
                    "type": "string",
                    "default": "0.0.0.0",
                    "minLength": 1,
                    "maxLength": 64,
                    "env": "TEMPLATE_API_HOSTNAME"
                },
                "port": {
                    "type": "integer",
                    "default": 3001,
                    "env": "TEMPLATE_API_PORT",
                    "minimum": 1,
                    "maximum": 65535
                },
                "prefix": {
                    "type": "string",
                    "default": "/api",
                    "minLength": 0,
                    "maxLength": 32,
                    "env": "TEMPLATE_API_PREFIX",
                    "pattern": "^(\/[a-zA-Z]{1}|)[-a-zA-Z0-9\/]{0,31}$"
                },
                "backlog": {
                    "type": "integer",
                    "default": 511,
                    "env": "TEMPLATE_API_BACKLOG",
                    "minimum": 1
                },
                "connection_timeout": {
                    "type": "integer",
                    "default": 0,
                    "env": "TEMPLATE_API_CONNECTION_TIMEOUT",
                    "minimum": 0
                },
                "keep_alive_timeout": {
                    "type": "integer",
                    "default": 5000,
                    "env": "TEMPLATE_API_KEEP_ALIVE_TIMEOUT",
                    "minimum": 1
                },
                "body_limit": {
                    "type": "string",
                    "default": "1mb",
                    "env": "TEMPLATE_API_BODY_LIMIT",
                    "pattern": "^[0-9]{1,10}(b|kb|mb)$"
                },
                "trust_proxy": {
                    "type": "boolean",
                    "default": false,
                    "env": "TEMPLATE_API_TRUST_PROXY"
                }
            },
            "additionalProperties": false,
            "required": [
                "enable",
                "hostname",
                "port",
                "prefix",
                "backlog",
                "connection_timeout",
                "keep_alive_timeout",
                "body_limit",
                "trust_proxy",
                "logging"
            ]
        },
        "connector": {
            "type": "object",
            "default": {},
            "env": "TEMPLATE_CONNECTOR",
            "properties": {
                "type": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ]
        },
        "i18n": {
            "type": "object",
            "default": {},
            "env": "TEMPLATE_i18n",
            "properties": {
                "default": {
                    "type": "string",
                    "default": "ru",
                    "env": "TEMPLATE_i18n_DEFAULT",
                    "minLength": 1,
                    "maxLength": 32
                }
            },
            "additionalProperties": false,
            "required": [
                "default"
            ]
        },
        "sessions": {
            "type": "object",
            "default": {},
            "env": "TEMPLATE_SESSIONS",
            "properties": {
                "ttl": {
                    "type": "string",
                    "default": "10m",
                    "env": "TEMPLATE_SESSIONS_TTL",
                    "pattern": "^[0-9]{1}[smhd]{0,1}[0-9smhd]*[mhsd]{1}"
                },
                "store": {
                    "type": "object",
                    "default": {},
                    "env": "TEMPLATE_SESSIONS_STORE",
                    "properties": {
                        "type": {
                            "type": "string",
                            "default": "none"
                        }
                    },
                    "required": [
                        "type"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "ttl",
                "store"
            ]
        }
    },
    "additionalProperties": false,
    "required": [
        "logger",
        "api",
        "connector",
        "i18n",
        "sessions"
    ]
}
